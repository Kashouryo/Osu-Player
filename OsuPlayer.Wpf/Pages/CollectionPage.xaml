<Page x:Class="Milkitic.OsuPlayer.Pages.CollectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:osuPlayer="clr-namespace:Milkitic.OsuPlayer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CollectionPage" Unloaded="Page_Unloaded" IsHitTestVisible="True" Focusable="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <StackPanel Orientation="Horizontal" >
                <Label x:Name="LblTitle" FontSize="22" Margin="10" Content="Collection Title" VerticalAlignment="Center" />
                <Button Content="编辑信息" Width="70" Margin="5" Height="30" Style="{StaticResource CollectionButtonStyle}" />
                <Button x:Name="BtnDelCol" Content="删除收藏" Width="70" Margin="5" Height="30"  Style="{StaticResource CollectionButtonStyle}" Click="BtnDelCol_Click"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                <Button Content="播放全部" Width="70" Margin="5" Height="30" Style="{StaticResource Collection2ButtonStyle}"/>
                <Button x:Name="BtnExportAll" Content="导出全部" Width="70" Margin="5" Height="30" Style="{StaticResource Collection2ButtonStyle}" Click="BtnExportAll_Click" />
            </StackPanel>
        </Grid>
        <ListView Grid.Row="2" x:Name="MapList" Margin="0,5,0,2" Background="Transparent" BorderThickness="0"
                 ItemsSource="{Binding Mode=OneWay}" MouseDoubleClick="RecentList_MouseDoubleClick">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="ItemPlay" Header="播放" Click="ItemPlay_Click" />
                    <!--<MenuItem x:Name="ItemNextPlay" Header="下一首播放" Click="ItemNextPlay_Click" />-->
                    <Separator/>
                    <MenuItem x:Name="ItemCollect" Header="收藏" Click="ItemCollect_Click" />
                    <MenuItem x:Name="ItemExport" Header="导出" Click="ItemExport_Click" />
                    <Separator/>
                    <MenuItem x:Name="ItemSearchTitle" Header="搜索该标题" Click="ItemSearchTitle_Click" />
                    <MenuItem x:Name="ItemSearchArtist" Header="搜索该艺术家" Click="ItemSearchArtist_Click" />
                    <MenuItem x:Name="ItemSearchSource" Header="搜索该来源" Click="ItemSearchSource_Click" />
                    <MenuItem x:Name="ItemSearchMapper" Header="搜索该作者" Click="ItemSearchMapper_Click" />
                    <Separator/>
                    <MenuItem x:Name="ItemDelete" Header="从收藏夹中移除" Click="ItemDelete_Click" />
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.DataContext>
                <osuPlayer:BeatmapViewModel/>
            </ListView.DataContext>
            <ListView.Resources>
                <DataTemplate DataType="{x:Type osuPlayer:BeatmapViewModel}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="55"/>
                            <ColumnDefinition Width="315"/>
                            <ColumnDefinition Width="215"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Label VerticalAlignment="Center" Margin="15,7,15,7" Grid.Column="0" Content="{Binding Id}"/>
                        <Label VerticalAlignment="Center" Grid.Column="1" Content="{Binding AutoTitle}"/>
                        <Label VerticalAlignment="Center" Grid.Column="2" Content="{Binding AutoArtist}" Foreground="#FF9C9C9C"/>
                        <Label x:Name="LblCreator" VerticalAlignment="Center" Grid.Column="3"
                               Content="{Binding AutoCreator}" MouseDoubleClick="LblCreator_MouseDoubleClick" 
                               Foreground="#FF1672CD" Cursor="Hand" />
                        <Label x:Name="LblVersion" VerticalAlignment="Center" Grid.Column="4"
                               Content="{Binding AutoVersion}" Foreground="#FF9C9C9C" />
                    </Grid>
                </DataTemplate>
            </ListView.Resources>
        </ListView>
    </Grid>
</Page>
