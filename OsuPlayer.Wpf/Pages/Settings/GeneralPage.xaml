<Page x:Class="Milkitic.OsuPlayer.Pages.Settings.GeneralPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Milkitic.OsuPlayer.Pages.Settings"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GeneralPage">

    <Grid>
        <ScrollViewer>
            <StackPanel Margin="10">
                <Label Style="{StaticResource ConfigTitleStyle}" Content="启动：" HorizontalAlignment="Left" />
                <CheckBox Style="{StaticResource ConfigCheckStyle}" Content="开机自动运行" HorizontalAlignment="Left" />
                <Label Style="{StaticResource ConfigTitleStyle}" Content="osu!db位置：" HorizontalAlignment="Left" />
                <StackPanel Orientation="Horizontal" Style="{StaticResource ConfigStackHoriStyle}">
                    <Label Style="{StaticResource ConfigLabel2Style}" Content="C:\asdf\asdf\adsf\fsad\sfda\osu.db" />
                    <Button Content="..." Width="20" Style="{StaticResource ConfigButtonStyle}" />
                </StackPanel>
                <Label Style="{StaticResource ConfigTitleStyle}" Content="关闭窗体：" HorizontalAlignment="Left" />
                <StackPanel HorizontalAlignment="Left" >
                    <RadioButton Style="{StaticResource ConfigRadioStyle}" Content="最小化到系统托盘" HorizontalAlignment="Left" />
                    <RadioButton Style="{StaticResource ConfigRadioStyle}" Content="退出程序" HorizontalAlignment="Left" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
