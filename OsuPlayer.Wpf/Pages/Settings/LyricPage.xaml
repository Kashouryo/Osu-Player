<Page x:Class="Milkitic.OsuPlayer.Pages.Settings.LyricPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Milkitic.OsuPlayer.Pages.Settings"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LyricPage">

    <Grid>
        <ScrollViewer>
            <StackPanel Margin="10">
                <Label Style="{StaticResource ConfigTitleStyle}" Content="桌面歌词：" HorizontalAlignment="Left" />
                <CheckBox Style="{StaticResource ConfigCheckStyle}" Content="启用桌面歌词" HorizontalAlignment="Left" />
                <Label Style="{StaticResource ConfigTitleStyle}" Content="源：" HorizontalAlignment="Left" />
                <StackPanel HorizontalAlignment="Left">
                    <RadioButton Style="{StaticResource ConfigRadioStyle}" Content="自动"/>
                    <RadioButton Style="{StaticResource ConfigRadioStyle}" Content="网易云音乐"/>
                    <RadioButton Style="{StaticResource ConfigRadioStyle}" Content="酷狗音乐"/>
                    <RadioButton Style="{StaticResource ConfigRadioStyle}" Content="QQ音乐"/>
                </StackPanel>
                <Label Style="{StaticResource ConfigTitleStyle}" Content="翻译：" HorizontalAlignment="Left" />
                <StackPanel HorizontalAlignment="Left">
                    <RadioButton Style="{StaticResource ConfigRadioStyle}" Content="显示全部歌词"/>
                    <RadioButton Style="{StaticResource ConfigRadioStyle}" Content="偏好源歌词（仅Netease源有效）"/>
                    <RadioButton Style="{StaticResource ConfigRadioStyle}" Content="偏好翻译歌词（仅Netease源有效）"/>
                </StackPanel>
                <Label Style="{StaticResource ConfigTitleStyle}" Content="匹配：" HorizontalAlignment="Left" />
                <CheckBox Style="{StaticResource ConfigCheckStyle}" Content="启用严格匹配" HorizontalAlignment="Left" />
                <Label Style="{StaticResource ConfigTitleStyle}" Content="缓存：" HorizontalAlignment="Left" />
                <CheckBox Style="{StaticResource ConfigCheckStyle}" Content="启用歌词缓存，离线也可使用" HorizontalAlignment="Left" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
