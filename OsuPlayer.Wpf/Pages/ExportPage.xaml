<Page x:Class="Milkitic.OsuPlayer.Pages.ExportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:beatmaps="clr-namespace:osu_database_reader.Components.Beatmaps;assembly=osu-database-reader"
      xmlns:models="clr-namespace:Milkitic.OsuPlayer"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExportPage">

    <Grid>
        <TabControl Background="Transparent" BorderThickness="0">
            <TabItem Style="{StaticResource PinkTabItem}">
                <TabItem.Header>
                    <TextBlock Text="已导出" Cursor="Hand" FontSize="16" Padding="26,10"/>
                </TabItem.Header>
                <Grid Background="Transparent">
                    <ListView x:Name="ExportList" Margin="0,10,0,2" Background="#80FFFFFF" BorderThickness="0"
                              MouseDoubleClick="ExportList_MouseDoubleClick" ItemsSource="{Binding Mode=OneWay}" 
                              ItemContainerStyle="{StaticResource GridView}">
                        <ListView.ContextMenu>
                            <ContextMenu Style="{StaticResource DefaultContextMenu}">
                                <MenuItem x:Name="ItemOpenFolder" Header="打开文件所在目录" Click="ItemOpenFolder_Click"
                                          Style="{DynamicResource DefaultMenuItem}" />
                                <Separator />
                                <MenuItem x:Name="ItemRexport" Header="重新导出" Click="ItemRexport_Click"
                                          Style="{DynamicResource DefaultMenuItem}" />
                                <MenuItem x:Name="ItemDelete" Header="删除导出文件" Click="ItemDelete_Click"
                                          Style="{DynamicResource DefaultMenuItem}" />
                            </ContextMenu>
                        </ListView.ContextMenu>
                        <ListView.DataContext>
                            <models:BeatmapViewModel />
                        </ListView.DataContext>
                        <ListView.Resources>
                            <DataTemplate x:Key="IdDt">
                                <Label VerticalAlignment="Center" Margin="0,3" Content="{Binding Id, Mode=OneWay}" />
                            </DataTemplate>
                            <DataTemplate x:Key="TitleDt">
                                <Label VerticalAlignment="Center" Content="{Binding AutoTitle, Mode=OneWay}" />
                            </DataTemplate>
                            <DataTemplate x:Key="ArtistDt">
                                <Label VerticalAlignment="Center" Content="{Binding AutoArtist, Mode=OneWay}"
                                       Foreground="#FF9C9C9C" />
                            </DataTemplate>
                            <DataTemplate x:Key="SizeDt">
                                <Label VerticalAlignment="Center" Content="{Binding FileSize, Mode=OneWay}" Foreground="#FF9C9C9C" />
                            </DataTemplate>
                            <DataTemplate x:Key="TimeDt">
                                <Label VerticalAlignment="Center" x:Name="CheckBocHasJob"
                                       Content="{Binding ExportTime, Mode=OneWay}" />
                            </DataTemplate>
                        </ListView.Resources>
                        <ListView.View>
                            <GridView ColumnHeaderContainerStyle="{StaticResource MyHeaderStyle}">
                                <GridViewColumn Width="40" CellTemplate="{StaticResource IdDt}"></GridViewColumn>
                                <GridViewColumn Header="标题" Width="300" CellTemplate="{StaticResource TitleDt}"></GridViewColumn>
                                <GridViewColumn Header="艺术家" Width="200" CellTemplate="{StaticResource ArtistDt}"></GridViewColumn>
                                <GridViewColumn Header="大小" Width="100" CellTemplate="{StaticResource SizeDt}"></GridViewColumn>
                                <GridViewColumn Header="导出时间" Width="150" CellTemplate="{StaticResource TimeDt}"></GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>

            </TabItem>
            <TabItem Style="{StaticResource PinkTabItem}">
                <TabItem.Header>
                    <TextBlock Text="正在进行" FontSize="16" Cursor="Hand" Padding="18,10"/>
                </TabItem.Header>
                <Grid Background="Transparent" />
            </TabItem>
        </TabControl>

    </Grid>

</Page>
